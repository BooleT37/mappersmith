{
  "preset": "ts-jest",
  "transform": {
    "\\.[jt]s$": "babel-jest"
  },
  "rootDir": "../../",
  "testEnvironment": "node",
  "timers": "fake",
  "browser": false,
  "testMatch": [ "**/?(*.)+(spec).[jt]s?(x)" ],
  "roots": [
    "<rootDir>/src/",
    "<rootDir>/spec/node/"
  ],
  "modulePaths": [
    "<rootDir>"
  ],
  "setupFiles": [
    "<rootDir>/jestSetup/index.js"
  ]
}
