{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "typings",
    "target": "es2017"
  },
  "include": [
    "typings/**/*",
    "spec/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "spec/**/*",
  ]
}
