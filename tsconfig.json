{
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "strict": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "typings/**/*",
    "spec/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
