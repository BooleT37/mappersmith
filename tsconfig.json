{
  "compilerOptions": {
    "baseUrl": "./src",
    "noEmit": true,
    "incremental": true,
    "strict": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["spec/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
